{{! template-lint-disable no-inline-styles }}
{{#if @dropdown.isOpen}}
  <div class="ember-basic-dropdown-content-wormhole-origin">
    {{#maybe-in-element this.destinationElement @renderInPlace}}
      {{#if @overlay}}
        <div class="ember-basic-dropdown-overlay"></div>
      {{/if}}
      <BasicDropdownContentInner
        @id={{@id}}
        @dropdown={{@dropdown}}
        @renderInPlace={{@renderInPlace}}
        @hPosition={{@hPosition}}
        @vPosition={{@vPosition}}
        @onFocusIn={{@onFocusIn}}
        @onFocusOut={{@onFocusOut}}
        @onMouseEnter={{@onMouseEnter}}
        @onMouseLeave={{@onMouseLeave}}
        @onKeyDown={{@onKeyDown}}
        ...attributes
      >
        {{yield}}
      </BasicDropdownContentInner>
      {{!-- {{#basic-dropdown/content-element
        tagName=_contentTagName
        id=dropdownId
        class=(concat "ember-basic-dropdown-content " class " " defaultClass " " (if renderInPlace "ember-basic-dropdown-content--in-place ") (if hPosition (concat "ember-basic-dropdown-content--" hPosition)) " " (if vPosition (concat "ember-basic-dropdown-content--" vPosition)) " " animationClass)
        style=style
        dir=dir}}
        {{yield}}
      {{/basic-dropdown/content-element}} --}}
    {{/maybe-in-element}}
  </div>
{{else}}
  <div id={{@dropdownId}} class="ember-basic-dropdown-content-placeholder" style="display: none;"></div>
{{/if}}